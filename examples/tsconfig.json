{
    "include": 
    [
        "./**/*"
    ],
    "compilerOptions": 
    {
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowJs": true,
        "module": "es2015",
        "target": "es5",
        "moduleResolution": "node",
        "sourceMap": true,
        "pretty": true,
        "baseUrl": ".",
        "paths": {
            "src/*": ["../src/*"],
            "examples/*": ["./*"],
            "views/*": ["./views/*"]
        },
        "lib": 
        [
            "dom",
            "es5",
            "es2015.promise"
        ]
    }
}